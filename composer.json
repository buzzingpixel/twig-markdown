{
    "name": "buzzingpixel/twig-markdown",
    "version": "1.0.2",
    "description": "A Twig Markdown filter",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "TJ Draper",
            "email": "tj@buzzingpixel.com",
            "homepage": "https://buzzingpixel.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cebe/markdown": "^1.2",
        "twig/twig": "^2.10|^3.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpunit/phpunit": "^8.1",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "BuzzingPixel\\TwigMarkdown\\": "src"
        }
    },
    "config": {
        "bin-compat": "full",
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "diConfigFilePath": "src/diConfig.php",
        "twigExtensions": [
            "BuzzingPixel\\TwigMarkdown\\MarkdownTwigExtension"
        ]
    }
}
